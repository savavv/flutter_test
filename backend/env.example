# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_clone
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/telegram_clone_test
SQLITE_DATABASE_PATH=telegram_clone.db
SQLITE_TEST_DATABASE_PATH=telegram_clone_test.db

# Redis
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# Security & Encryption
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_SMS=5
RATE_LIMIT_LOGIN=10

# Security Headers
ENABLE_SECURITY_HEADERS=false
ENABLE_CSRF_PROTECTION=false
ENABLE_HELMET=false

# SMS Service
SMS_API_KEY=
SMS_API_URL=https://api.sms-service.com
SMS_RATE_LIMIT=5

# File Storage & Security
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/gif","image/webp","video/mp4","video/avi","video/mov","video/webm","audio/mp3","audio/wav","audio/ogg","audio/m4a","application/pdf","text/plain"]
SCAN_UPLOADS_FOR_MALWARE=true

# CORS & Security
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000","http://127.0.0.1:8000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Session Security
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Encryption for sensitive data
ENCRYPT_PERSONAL_DATA=true
ENCRYPT_MESSAGES=true
ENCRYPT_FILES=false
