# Database Configuration
DATABASE_TYPE=sqlite  # postgresql or sqlite
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_clone
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/telegram_clone_test
SQLITE_DATABASE_PATH=telegram_clone.db
SQLITE_TEST_DATABASE_PATH=telegram_clone_test.db

# Redis (optional for SQLite mode)
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# Security & Encryption
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_SMS=5
RATE_LIMIT_LOGIN=10

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true
ENABLE_HELMET=true

# SMS Service
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-service.com
SMS_RATE_LIMIT=5

# File Storage & Security
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
SCAN_UPLOADS_FOR_MALWARE=true

# CORS & Security - ИСПРАВЛЕННЫЙ РАЗДЕЛ
ALLOWED_ORIGINS=["*"]
ALLOWED_HOSTS=["*"]

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Session Security
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Data Encryption
ENCRYPT_PERSONAL_DATA=true
ENCRYPT_MESSAGES=true
ENCRYPT_FILES=false